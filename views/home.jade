block title
    | eize.ninja! stuff by Amir Eldor

block content
    #projects
        - each proj in projects
            article
                .inside
                    h3.title
                        a(href="#{root_url}/#{proj.name}")= proj.title
                    a(href="#{root_url}/#{proj.name}")
                        img(src="#{proj.image}" alt="#{proj.title} thumbnail").thumbnail
                    .description= proj.short_desc
